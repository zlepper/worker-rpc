{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "sourceMap": true,
    "strict": true,
    "outDir": "build",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "declaration": true,
    "lib": ["ES2015", "WebWorker"]
  },
  "files": ["index.ts"],
  "exclude": ["node_modules"]
}
