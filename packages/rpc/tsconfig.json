{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "declaration": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*",
    "sample/**/*"
  ]
}
