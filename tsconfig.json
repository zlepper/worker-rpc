{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "sourceMap": true,
    "strict": true,
    "outDir": "build",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*",
    "sample/**/*"
  ]
}
